@model WebMantenedorOneClick.Models.DTO.Producto


<div class="container">

    <center><h1>Buscar Producto por Rut Afiliado</h1></center>
    <br>

    @using (Html.BeginForm("Buscar", "MantenedorOc", FormMethod.Post, new { id = "FormBuscarProducto2" }))
    {
        <div class="form-row">

            <div class="form-group col-md-6">
                <label>Rut</label>
                @Html.TextBoxFor(model => model.rutAfiliado, new { @class = "form-control", placeholder = "Ingrese el rut del afiliado", @type = "number" })
            </div>

            <div class="form-group col-md-6">
                <center>
                    <br>

                    <button type="submit" name="btnBuscar" id="btnBuscar" class="btn btn-outline-danger btn-lg">Buscar</button>

                    <button type="reset" class="btn btn-outline-danger btn-lg" onclick="limpiarFormulario()" value="Limpiar">Limpiar</button>

                </center>
            </div>
        </div>
    }


</div>