@model WebMantenedorOneClick.Models.DTO.ProductoOc


<div class="container">

    <center><h1>Agregar Producto</h1></center>
    <br>

    @using (Html.BeginForm("Agregar", "Producto", FormMethod.Post, new { id = "FormAgregarProducto", name = "FormAgregarProducto" }))
    {
        <div class="form-row">

            <div class="form-group col-md-6">
                <label>Código producto</label>
                @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", placeholder = "Ingrese el código del producto", @type = "number" })
            </div>

            <div class="form-group col-md-6">
                <label>Nombre producto</label>
                @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", placeholder = "Ingrese el nombre del producto", @maxlength = "25" })
            </div>

            <div class="form-group col-md-6">
                <label>Fecha Inicio</label>
                @Html.TextBoxFor(model => model.fechaInicio, new { @class = "form-control", placeholder = "Ingrese la fecha de inicio", @type = "date" })
            </div>

            <div class="form-group col-md-6">
                <label>Isapre</label>
                @Html.DropDownListFor(model => model.isapre,
                   new SelectList(Model.LstIsapres, "Value", "Text"), "Selecciona la isapre",
                   new { @class = "form-control" })
            </div>

            <div class="form-group col-md-6">
                <label>Valor individual</label>
                @Html.HiddenFor(model => model.newValor)
                @Html.TextBoxFor(model => model.valor, new { @class = "form-control", placeholder = "Ingrese el valor individual del producto" })
            </div>

            <div class="form-group col-md-6">
                <label>Beneficiario</label>
                @Html.DropDownListFor(model => model.beneficiario,
                   new SelectList(Model.LstBeneficiarios, "Value", "Text"), "Selecciona el beneficiario",
                   new { @class = "form-control" })
            </div>

        </div>

        <center>
            <br>

            <button type="submit" class="btn btn-outline-danger btn-lg" id="btnAgregar" name="btnAgregar">Agregar</button>

            <button type="reset" class="btn btn-outline-danger btn-lg" onclick="limpiarFormulario()" value="Limpiar">Limpiar</button>

        </center>
    }


</div>